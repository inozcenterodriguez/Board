<UserControl x:Class="BoardDef.Dados"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200" d:DesignWidth="300" Width="200" Height="300">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="233*"/>
        </Grid.RowDefinitions>
        
        <Canvas Grid.RowSpan="2" Margin="0,0,10,20">
            <Rectangle Fill="Black" Height="161" Canvas.Left="10" Stroke="Black" Canvas.Top="10" Width="180"/>
            <Button x:Name="button" Content="" Height="99" Canvas.Left="23" Canvas.Top="191" Width="140" BorderBrush="{x:Null}" Foreground="{x:Null}" ClickMode="Press" Template="{StaticResource ButtonControlTemplate1}" Click="button_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Images/Dados.png" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <TextBlock x:Name="NumeroDado" Height="119" Canvas.Left="71" TextWrapping="Wrap" Canvas.Top="31" Width="63" Foreground="White" FontSize="93.333" Text="5" VerticalAlignment="Center"/>
        </Canvas>

    </Grid>
</UserControl>
